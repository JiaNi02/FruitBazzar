<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitBazzar1.Views.ChatPage"
             Title="ChatPage">

    <ScrollView>
        <StackLayout>
            <!--Chat ListView-->
            <ListView x:Name="chatListView" ItemTemplate="{StaticResource ChatMessageTemplate}">
                <ListView.Header>
                    <BoxView HeightRequest="10"/>
                </ListView.Header>
            </ListView>

            <!--User Input Entry-->
            <Entry x:Name="userInputEntry"
                   Placeholder="Type your message..."
                   Completed="OnSendMessageCompleted"/>

        </StackLayout>
    </ScrollView>

</ContentPage>