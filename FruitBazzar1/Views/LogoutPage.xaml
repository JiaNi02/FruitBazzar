<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitBazzar1.Views.LogoutPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F1F1F1"
             Title="Logout">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Image Source="logout.png" HeightRequest="250" WidthRequest="250" Aspect="AspectFit"/>
        <Label Text="Are you sure you want to logout?" FontSize="18" HorizontalTextAlignment="Center" Margin="0,20,0,0"/>

        <StackLayout HorizontalOptions="FillAndExpand" Margin="20,20,20,0">
            <Button Text="Logout" Clicked="OnLogoutClicked" BackgroundColor="#152c39" TextColor="White" CornerRadius="5" HeightRequest="50"/>
            <Button Text="Cancel" Clicked="OnCancelClicked" BackgroundColor="LightGray" TextColor="#2c3e50" CornerRadius="5" HeightRequest="50" Margin="0,10,0,0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>