<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FruitBazzar1.Views.NotificationPage"
             Title="             Notification"
             BackgroundColor="#F1F1F1">
    <ScrollView>
        <StackLayout>
            <Label Text=""/>
            <CollectionView x:Name="NotificationCollectionView" ItemsSource="{Binding Notifications}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10" >
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="17" BackgroundColor="White" TextColor="#152c39"/>
                            <Label Text="{Binding Content}" BackgroundColor="White" TextColor="#152c39"/>
                            <Label Text="{Binding NotificationDateTime}" BackgroundColor="White" TextColor="#152c39"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

    </ScrollView>



</ContentPage>